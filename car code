#creating the class
class Car:
    #creating anticlass
    pass
#declaring pass allows us to add objects and attributes to the class

#adding objects to the class
ford = Car()
honda = Car()
audi = Car()


#adding attributes to the class
ford.speed = 200
honda.speed = 220
audi.speed = 250

#adding more attributes
ford.color = 'red'
honda.color = 'blue'
audi.color = 'black'

#print any attribute you want
print (ford.speed)
print (ford.color)

#changing attributes
ford.speed = 300
ford.color = 'blue'

print (ford.speed)
print (ford.color)
